<h1 class="center-align">Добавить описание начинки для торта</h1>

{{#if error}}
    <p class="alert">{{error}}</p>
{{/if}}
<div class="row">
    <div class="col s8 offset-s2">
        <form action="/addCakeToppings" method="POST" enctype="multipart/form-data" id="add">
            <div class="input-field">
                <input id="title" name="title" type="text" class="validate" required>
                <label for="title">Название начинки</label>
                <span class="helper-text" data-error="Введите название начинки"></span>
            </div>

            <div class="input-field">
                <textarea id="text" class="materialize-textarea" name="text"
                    placeholder="Введите описание начинки"></textarea>
                <label for="text">Описание начинки</label>
            </div>

            <div class="input-field file-field">
                <div class="btn">
                    <span>Загрузить фото начинки</span>
                    <input type="file" name="image">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button class="btn btn-primary waves-effect waves-orange">Добавить описание</button>
        </form>
    </div>
</div>