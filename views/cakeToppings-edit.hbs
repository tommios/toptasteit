<div class="container">
    <h4 class="center-align">Редактировать описание начинки для торта</h4>
    <br>
    {{#if error}}
        <p class="alert">{{error}}</p>
    {{/if}}
    <div class="row">
        <div class="col s8 offset-s2">
            <form action="/cakeToppings/editCakeTopic" method="POST" class="сakeToppings-form"
                enctype="multipart/form-data">
                <div class="input-field">
                    <input id="title" name="title" type="text" class="validate" required value="{{cakeToppings.title}}">
                    <label for="title">Новое название начинки</label>
                    <span class="helper-text" data-error="Введите новое название"></span>
                </div>

                <div class="input-field">
                    <textarea id="text" class="materialize-textarea" name="text"
                        placeholder="Введите новое описание начинки">{{cakeToppings.text}}</textarea>
                    <label for="text">Новое описание начинки</label>
                </div>

                <div class="input-field file-field">
                    <div class="btn blue">
                        <span>Загрузить новое фото</span>
                        <input type="file" name="image">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>

                <input type="hidden" name="id" value="{{cakeToppings.id}}">
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <br>
                <div class="center">
                    <button class="btn btn-primary waves-effect waves-orange">Изменить описание</button>
                </div>

            </form>
        </div>
    </div>
</div>