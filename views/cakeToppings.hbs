                                    var h = d[g]('body')[0];
                                    h.appendChild(s);
                                }
                            })(window, document);
                        </script> --}}
                    </div>

                </div>

            </div>
            <hr>
        {{/each}}

    {{else}}
        <p>Описаний начинок для тортов пока нет</p>
    {{/if}}
    <div class="collection">
        <a href="/products" class="collection-item">Перейти в Каталог</a>
        <a href="/formOrder" class="collection-item">Перейти в форму для заказа</a>
    </div>
</div>