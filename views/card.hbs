<h1>Корзина</h1>

<div id="card">
    {{#if products.length}}
        <table>
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Цена за кг</th>
                    <th>Количество</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{price}}</td>
                        <td>{{count}}</td>
                        <td>
                            <button class="btn red btn-small js-remove" data-id="{{id}}"
                                data-csrf="{{@root.csrf}}">Удалить</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <p><strong>Итого:</strong> <span class="price">{{price}}</span> </p>

        <form action="/formOrder" method="post">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn">Заказать</button>
        </form>
    {{else}}
        <p>Ваша корзина пока пуста</p>
    {{/if}}
</div>